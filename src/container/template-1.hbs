<div class="page">
    <div class="page_content">
        <header class="header page-block">
            <div class="header_logo">
                {{>logo}}
            </div>
            <nav>
                {{>nav list=header}}
            </nav>
        </header>
        <div class="page-block">
            <div class="hero ">
                {{>hero title=hero.title text=hero.text}}
            </div>
        </div>
        <div class="page-block">
            <main class="row m-0">
                {{#each plans}}
                <div class="col plans-card p-0">
                    {{>card data=this}}
                </div>
                {{/each}}
            </main>
        </div>
        <footer>
            <div class="row">
                <div class="col-3">
                    {{>logo}}
                    <span class="footer_copyright">Copyright 2023-2024</span>
                </div>
                {{#each footer}}
                <div class="col-3">
                    <div class="footer_title">
                        {{title}}
                    </div>
                    {{>nav isVertical=true list=links}}
                </div>
                {{/each}}
            </div>
        </footer>
    </div>
</div>